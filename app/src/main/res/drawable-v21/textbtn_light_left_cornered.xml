<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:topLeftRadius="30dip" android:bottomLeftRadius="30dip"/>
            <gradient
                android:angle="360"
                android:endColor="#ffa628"
                android:gradientRadius="360"
                android:startColor="#f83845"
                android:type="linear" />

            <stroke
                android:width="0dp"
                android:color="#ff207d94" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <corners android:topLeftRadius="30dip" android:bottomLeftRadius="30dip"/>
            <padding  android:top="0dip" android:right="0dip" android:bottom="0dip" />
        </shape>
    </item>

</layer-list>