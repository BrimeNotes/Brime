<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="360"
            android:endColor="#ffa628"
            android:gradientRadius="360"
            android:startColor="#f83845"
            android:type="linear" />

        <stroke
            android:width="0dp"
            android:color="#ff207d94" />
    </shape>
</item>
<item
    android:bottom="1dp"
    android:left="1dp"
    android:right="1dp"
    android:top="1dp">
    <shape android:shape="rectangle" >
        <solid android:color="#fff" />
        <corners android:radius="10dip"/>

    </shape>
</item>

</layer-list>